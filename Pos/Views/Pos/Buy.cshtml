@model Pos.Models.BoughtItem
@{
    ViewBag.Title = "Buy";
    Layout = "~/Views/Shared/_Layout.cshtml";

    
}

<h2>You buy this item:</h2>

<div>
    <table id="t01">
        <thead>
        <th>ItemId</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Amount</th>

        </thead>
        
          @{ var Total = Model.Item.Price * Model.Quantity; }
        <tr>
            <td>
                @Model.ItemId
            </td>
            <td>
                @Model.Item.Name
            </td>
            <td>
                @Model.Item.Price
            </td>
            <td>
                @Model.Quantity
            </td>
            <td>
                @Total
            </td>

        </tr>

    </table>
</div>
<br />
@using (@Html.BeginForm("Customer", "Pos"))
{
    <div class="form-group">
        <button type="submit" class="btn-primary" position="center">Buy More Item</button>
    </div>
}

<style>
    table#t01 {
        width: 100%;
        background-color: #f1f1c1;
    }

        table#t01 tr:nth-child(even) {
            background-color: #a7aaaf;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #dce0e8;
        }

        table#t01 th {
            color: white;
            background-color: #8342f4;
        }

    table, th, td {
        border: 1px solid #41f45c;
        border-collapse: collapse;
    }

    th, td {
        text-align: center;
        padding: 15px;
    }
</style> 