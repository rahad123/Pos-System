@model Pos.Models.Item
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin Page</h2>

@using (Html.BeginForm("Update", "Pos"))
{
<div>
    <table id="t01">
        <thead>
            <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Action

        </th>


            <tr>
                <td>
                    @Html.TextBoxFor(m => m.Id, Model.Id.ToString(), new { @class = "form-control" })
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Name, Model.Name, new { @class = "form-control" })
                </td>
                <td>
                    
                    @Html.TextBoxFor(m => m.Price, Model.Price.ToString(), new { @class = "form-control" })
                </td>
                <td>
                    <button type="submit" class="btn-primary">Submit</button>
                </td>
            </tr>

    </table>
</div>
}
<br />
<br />
@Html.ActionLink(" Add New Item ", "Add")


<style>
    table#t01 {
        width: 100%;
        background-color: #f1f1c1;
    }

        table#t01 tr:nth-child(even) {
            background-color: #a7aaaf;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #dce0e8;
        }

        table#t01 th {
            color: white;
            background-color: #8342f4;
        }

    table, th, td {
        border: 1px solid #41f45c;
        border-collapse: collapse;
    }

    th, td {
        text-align: center;
        padding: 15px;
    }
</style> 