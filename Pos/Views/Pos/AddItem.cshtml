@model IEnumerable<Pos.Models.Item>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your Updated Item List is:</h2>


<div>
    <table id="t01">
        <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Action</th>

        </thead>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit")
                    @Html.ActionLink("Delete", "Delete")
                </td>
            </tr>

        }

    </table>
</div>
<br />
<br />
@Html.ActionLink("Add More Item", "Add")
@Html.ActionLink("Return Home", "Login")


<style>
    table#t01 {
        width: 100%;
        background-color: #f1f1c1;
    }

        table#t01 tr:nth-child(even) {
            background-color: #a7aaaf;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #dce0e8;
        }

        table#t01 th {
            color: white;
            background-color: #8342f4;
        }

    table, th, td {
        border: 1px solid #41f45c;
        border-collapse: collapse;
    }

    th, td {
        text-align: center;
        padding: 15px;
    }
</style> 